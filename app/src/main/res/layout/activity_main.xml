<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.technologyworld.MainActivity">
    android:orientation="vertical"
    tools:context="com.example.com.technologyworld.MainActivity">

    <TextView
        android:id="@+id/selected_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:text="@string/selected_products"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:onClick="newProduct"
        android:text="@string/button_add_product"
        app:layout_anchorGravity="bottom|center" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selected_products"
        android:id="@+id/scroll_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/relative_layout_2">

           <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_1"/>

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_1"
                android:id="@+id/text_product_1"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:layout_below="@id/image_product_1"
                android:id="@+id/image_product_2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_2"
                android:layout_below="@id/image_product_1"
                android:id="@+id/text_product_2"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_3"
                android:layout_below="@id/image_product_2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_3"
                android:layout_below="@id/image_product_2"
                android:id="@+id/text_product_3"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_4"
                android:layout_below="@id/image_product_3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_4"
                android:layout_below="@id/image_product_3"
                android:id="@+id/text_product_4"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_5"
                android:layout_below="@id/image_product_4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_5"
                android:layout_below="@id/image_product_4"
                android:id="@+id/text_product_5"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_6"
                android:layout_below="@id/image_product_5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_6"
                android:layout_below="@id/image_product_5"
                android:id="@+id/text_product_6"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_7"
                android:layout_below="@id/image_product_6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_7"
                android:layout_below="@id/image_product_6"
                android:id="@+id/text_product_7"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_8"
                android:layout_below="@id/image_product_7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_8"
                android:layout_below="@id/image_product_7"
                android:id="@+id/text_product_8"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_9"
                android:layout_below="@id/image_product_8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_9"
                android:layout_below="@id/image_product_8"
                android:id="@+id/text_product_9"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/fab_margin"
                android:id="@+id/image_product_10"
                android:layout_below="@id/image_product_9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:layout_toRightOf="@id/image_product_10"
                android:layout_below="@id/image_product_9"
                android:id="@+id/text_product_10"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>